{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@firecms/cloud": ["../packages/firecms_cloud/src"],
      "@firecms/core": ["../packages/firecms_core/src"],
      "@firecms/ui": ["../packages/ui/src"],
      "@firecms/formex": ["../packages/formex/src"],
      "@firecms/firebase": ["../packages/firebase_firecms/src"],
      "@firecms/collection_editor_firebase": ["../packages/collection_editor_firebase/src"],
      "@firecms/data_enhancement": ["../packages/data_enhancement/src"],
      "@firecms/data_import_export": ["../packages/data_import_export/src"],
      "@firecms/schema_inference": ["../packages/schema_inference/src"],
      "@firecms/datatalk": ["../packages/datatalk/src"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "build"]
}
