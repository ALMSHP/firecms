{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "firecms": ["../../packages/firecms/src/index.ts"],
      "@firecms/core": ["../../packages/firecms_core/src/index.ts"],
      "@firecms/cli": ["../../packages/firecms_cli/src/index.ts"],
      "@firecms/firebase": ["../../packages/firebase_firecms/src/index.ts"],
      "@firecms/data_enhancement": ["../../packages/data_enhancement/src/index.ts"],
      "@firecms/data_import_export": ["../../packages/data_import_export/src/index.ts"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build"]
}
