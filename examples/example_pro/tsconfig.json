{
  "extends": "../../packages/firecms_core/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@firecms/core": ["../../packages/firecms_core/src"],
      "@firecms/cli": ["../../packages/firecms_cli/src"],
      "@firecms/firebase": ["../../packages/firebase_firecms/src"],
      "@firecms/ui": ["../../packages/ui/src"],
      "@firecms/editor": ["../../packages/editor/src"],
      "@firecms/data_enhancement": ["../../packages/data_enhancement/src"],
      "@firecms/data_import_export": ["../../packages/data_import_export/src"],
      "@firecms/user_management": ["../../packages/user_management/src"]
    }
  },
  "include": ["./src"]
}
