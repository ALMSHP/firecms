{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "ts-node": {
    "esm": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
