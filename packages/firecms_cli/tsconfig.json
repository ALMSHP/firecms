{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "ES2022",
    "moduleResolution": "node",

    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2018",
    "experimentalDecorators": true,

    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
}
