{
  "name": "@firecms/core",
  "type": "module",
  "version": "3.0.0-canary.154",
  "description": "Awesome Firebase/Firestore-based headless open-source CMS",
  "funding": {
    "url": "https://github.com/sponsors/firecmsco"
  },
  "author": "FireCMS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/firecmsco/firecms.git",
    "directory": "packages/firecms_core"
  },
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "source": "src/index.ts",
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "firebase",
    "cms",
    "admin",
    "admin panel",
    "firebase panel",
    "firestore",
    "headless",
    "headless cms",
    "content manager"
  ],
  "scripts": {
    "watch": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly -p tsconfig.prod.json",
    "prepublishOnly": "run-s build",
    "createTag": "PACKAGE_VERSION=$(cat package.json | grep version | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
    "test:lint": "eslint \"src/**\" --quiet",
    "test": "jest",
    "clean": "rm -rf dist && find ./src -name '*.js' -type f | xargs rm -f",
    "generateIcons": "ts-node --esm src/icons/generateIcons.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@firecms/editor": "^3.0.0-canary.154",
    "@firecms/formex": "^3.0.0-canary.154",
    "@firecms/ui": "^3.0.0-canary.154",
    "@hello-pangea/dnd": "^17.0.0",
    "@radix-ui/react-portal": "^1.1.2",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "fuse.js": "^7.0.0",
    "history": "^5.3.0",
    "markdown-it": "^14.1.0",
    "notistack": "^3.0.1",
    "object-hash": "^3.0.0",
    "react-dropzone": "^14.2.10",
    "react-fast-compare": "^3.2.2",
    "react-image-file-resizer": "^0.4.8",
    "react-transition-group": "^4.4.5",
    "react-use-measure": "^2.1.1",
    "react-window": "^1.8.10",
    "yup": "^0.32.11"
  },
  "peerDependencies": {
    "firebase": "^10.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^6.25.1",
    "react-router-dom": "^6.25.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.16.11",
    "@types/object-hash": "^3.0.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-measure": "^2.0.12",
    "@vitejs/plugin-react": "^4.3.3",
    "cross-env": "^7.0.3",
    "firebase": "^10.14.1",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "react-router": "^6.27.0",
    "react-router-dom": "^6.27.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsd": "^0.31.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  },
  "files": [
    "dist",
    "src"
  ],
  "gitHead": "0c46cee41d666c60817c9f4f0447f78fcfa07ddf",
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
    }
  }
}
